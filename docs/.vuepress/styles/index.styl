@tailwind base;
@tailwind components;
@tailwind utilities;

.page {
  padding-bottom: 0 !important;
}

::-webkit-scrollbar {
  width: 11px;
  height: 11px;
}


::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: rgba(156, 163, 175, 1);
  border: 3px solid transparent;
  background-clip: padding-box;
}


::-webkit-scrollbar-thumb:hover {
  background-color: rgba(107, 114, 128, 1);
}

body {
  overflow: overlay;
}

* {
  scroll-behavior: smooth;
}

.page
  h1
    padding: 3rem
    font-size: 3rem
    text-align: center
    font-weight: 900
    border-bottom: 1px solid rgba(209, 213, 219, 1)
  h2
    padding-bottom: 2rem
    font-size: 2rem
    font-weight: 600

  h3
    padding-bottom: 1.5rem
    font-size: 1.5rem
    font-weight: 600
  h4, h5, h6
    padding-bottom: 1.2rem
    font-size: 1.2rem
    font-weight: 500

  img
    margin: 1rem auto

  li
    margin-left: 30px
    list-style: circle

  div>ul>li
    list-style: disc





